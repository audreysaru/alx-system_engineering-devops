#!/usr/bin/env bash
# This script signals the termination of the 4-to_infinity_and_beyond process running in terminal 1.
# It requires user confirmation.

# Define the termination file
terminate_file="/tmp/terminate_infinity"

# Prompt user for confirmation
echo "Press Enter to initiate termination."
read -r

# Signal the other script to terminate the process by creating the termination file
echo "Termination initiated." > "$terminate_file"

echo "Termination signal sent."
