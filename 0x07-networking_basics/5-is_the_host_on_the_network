#!/usr/bin/env bash
# Ping an IP address and check if it is on the network

# Check if an argument is provided
if [ -z "$1" ]; then
	echo "Usage: $0 {IP_ADDRESS}"
	exit 1
fi

# Extract the IP address from the command line argument
ip_address=$1

# Run the ping command and capture the output
ping_output=$(ping -c 5 "$ip_address" 2>&1)

# Check the success or failure of the ping command
#if ping -c 5 "$ip_address" &>/dev/null; then
	# Display the successful ping output
#	echo -e "The host at $ip_address is reachable on the network:\n$ping_output"
#else
	# Display the unsuccessful ping output
#	echo "The host at $ip_address is not reachable on the network."
#fi
